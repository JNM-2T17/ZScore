<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ph.edu.dlsu.advstat.zscore.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Probability Distribution Toolkit"
        android:textAlignment="center"
        android:layout_margin="10px"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pValueButton"
        android:text="Compute p-values (Normal)"
        android:layout_margin="10px"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zScoreButton"
        android:text="Compute z-scores"
        android:layout_margin="10px"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pValueTButton"
        android:text="Compute p-values (t-distribution)"
        android:layout_margin="10px"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tScoreButton"
        android:text="Compute t-scores"
        android:layout_margin="10px"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pValueX2Button"
        android:text="Compute p-values (chi-square distribution)"
        android:layout_margin="10px"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/x2Button"
        android:text="Compute X2 values"
        android:layout_margin="10px"/>
</LinearLayout>
