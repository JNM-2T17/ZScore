<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ph.edu.dlsu.advstat.zscore.ComputeT">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compute T-Score"
        android:id="@+id/headerLabel"
        android:textAlignment="center"
        android:textSize="28sp"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGroup"
        android:layout_below="@id/headerLabel">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftTailRadio"
            android:text="Left-Tailed Test"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightTailRadio"
            android:text="Right-Tailed Test"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twoTailRadio"
            android:text="Two-Tailed Test"/>
    </RadioGroup>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/pField"
        android:layout_below="@id/buttonGroup"
        android:hint="P-Value"
        android:inputType="numberDecimal"/>
    <android.support.percent.PercentRelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pField"
        android:id="@+id/inputPanel">
        <EditText
            app:layout_widthPercent="60%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dfField"
            android:layout_below="@id/pField"
            android:hint="Degrees of Freedom"
            android:inputType="number"/>
        <Button
            app:layout_widthPercent="40%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/dfField"
            android:layout_toRightOf="@id/dfField"
            android:id="@+id/computeButton"
            android:text="Compute T-Score"
            android:layout_below="@id/pField"/>
    </android.support.percent.PercentRelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tLabel"
        android:textSize="20sp"
        android:layout_below="@id/inputPanel"
        android:layout_margin="10dp"
        android:text="T-Score here"
        android:textAlignment="viewEnd"/>
</RelativeLayout>
